<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.com.p2p.domain.cms.repository.AdvertisementRepository">

    <!--基本字段定义 -->
    <sql id="base_column">
        ID,
        ADVER_CODE,
        TITLE,
        CONNECT_URL,
        DESCRIPTION,
        START_AT,
        END_AT,
        AD_PIC,
        OPENS,
        ORDER_NUM,
        STATUS,
        REMARK,
        CREATE_TIME,
        UPDATE_TIME,
        CREATE_USER_ID,
        UPDATE_USER_ID,
        VERSION
    </sql>

    <!--按主键进行查询，返回唯一一条记录 对应repository findOne方法 -->
    <select id="findOne" parameterType="string" resultType="Advertisement">
        SELECT 
            <include refid="base_column" />
        FROM 
            ADVERTISEMENT
        WHERE
            ID = #{id}
    </select>
 
 
    <!--按主键进行查询，返回唯一一条记录 对应repository findAdvertisementBytitle方法 -->
    <select id="findAdvertisementByTitle" parameterType="string" resultType="Advertisement">
        SELECT
            <include refid="base_column" />
        FROM
            ADVERTISEMENT
        WHERE
            TITLE = #{title}
    </select>

    <!--无条件全部记录检索 对应repository findAll方法 -->
    <select id="findAll" resultType="Advertisement">
        SELECT 
            <include refid="base_column" />
        FROM 
            ADVERTISEMENT
    </select>

    <!--无条件全部记录分页检索 对应repository findAll方法 -->
    <select id="findPageAll" parameterType="AdvertisementCriteria" resultType="Advertisement">
        SELECT
            <include refid="base_column" />
        FROM 
            ADVERTISEMENT
    </select>

    <!--插入记录 对应repository insert方法 -->
    <insert id="insert" parameterType="Advertisement">
        INSERT INTO
            ADVERTISEMENT
        (
             <include refid="base_column" />

        )
        VALUES
        (
          #{id},
          #{adverCode},
          #{title},
          #{connectUrl},
          #{description},
          #{startAt},
          #{endAt},
          #{adPic},
          #{opens},
          #{orderNum},
          #{status},
          #{remark},
          #{createTime},
          #{updateTime},
          #{createUserId},
          #{updateUserId},
          #{version}
        )
    </insert>

    <!--动态更新 对Input来的数据不为空的字段进行更新 对应repository dynamicUpdate方法 -->
    <update id="dynamicUpdate" parameterType="Advertisement">
        UPDATE
            ADVERTISEMENT
        <set>
            <if test="adverCode != null">
                ADVER_CODE = #{adverCode},
            </if>
            <if test="title != null">
                TITLE = #{title},
            </if>
            <if test="connectUrl != null">
                CONNECT_URL = #{connectUrl},
            </if>
            <if test="description != null">
                DESCRIPTION = #{description},
            </if>
            <if test="startAt != null">
                START_AT = #{startAt},
            </if>
            <if test="endAt != null">
                END_AT = #{endAt},
            </if>
            <if test="adPic != null">
                AD_PIC = #{adPic},
            </if>
            <if test="opens != null">
                OPENS = #{opens},
            </if>
            <if test="orderNum != null">
                ORDER_NUM = #{orderNum},
            </if>
            <if test="status != null">
                STATUS = #{status},
            </if>
            <if test="remark != null">
                REMARK = #{remark},
            </if>
            <if test="createTime != null">
                CREATE_TIME = #{createTime},
            </if>
            <if test="updateTime != null">
                UPDATE_TIME = #{updateTime},
            </if>
            <if test="createUserId != null">
                CREATE_USER_ID = #{createUserId},
            </if>
            <if test="updateUserId != null">
                UPDATE_USER_ID = #{updateUserId},
            </if>
            <if test="version != null">
                VERSION = #{version}
            </if>
        </set>
        WHERE
            ID = #{id}
    </update>

    <!--动态更新 按照实体的值实际数据进行更新对应repository update方法 -->
    <update id="update" parameterType="Advertisement">
        UPDATE
            ADVERTISEMENT
        SET
            ADVER_CODE = #{adverCode},
            TITLE = #{title},
            CONNECT_URL = #{connectUrl},
            DESCRIPTION = #{description},
            START_AT = #{startAt},
            END_AT = #{endAt},
            AD_PIC = #{adPic},
            OPENS = #{opens},
            ORDER_NUM = #{orderNum},
            STATUS = #{status},
            REMARK = #{remark},
            CREATE_TIME = #{createTime},
            UPDATE_TIME = #{updateTime},
            CREATE_USER_ID = #{createUserId},
            UPDATE_USER_ID = #{updateUserId},
            VERSION = #{version}
        WHERE
            ID = #{id}
    </update>
    
    <!--假删除 对应repository suspend方法 -->
    <update id="suspend" parameterType="string">
        UPDATE
            ADVERTISEMENT
        SET
            DEL_FLAG=1
        WHERE
            ID = #{id}
    </update>
    
    <!--真删除 对应repository delete方法 -->    
    <delete id="delete" parameterType="string">
        DELETE FROM 
            ADVERTISEMENT
        WHERE
            ID = #{id}
    </delete>
</mapper>
